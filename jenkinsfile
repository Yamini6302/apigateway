pipeline {
    agent any

    tools {
		maven 'my-maven'
		jdk 'my-jdk'
	}

    stages {
        stage('Git') {
            steps {
                echo 'Git clone done'
                git url:'https://github.com/Yamini6302/apigateway.git', branch:'main'
            }
        }
         stage('Build') {
            steps {
                echo 'Build done'
                bat "mvn clean install -DskipTests"
            }
         }
          stage('Test') {
            steps {
                echo 'Test done'
                bat "mvn test"
            }
          }
           stage('Deploy') {
            steps {
                echo 'Deploy done'
                 bat "docker build -t gateway ."
			             bat "docker run -p 9996:9996 -d --name gateway gateway"
            }

        }

    }

}
